header.navbar.navbar-default.navbar-fixed-top(role='banner',ng-app='headerApp')
  .container(ng-controller='headerCTRL')
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
           |         
        span.icon-bar
           |         
        span.icon-bar
           |         
        span.icon-bar
           |       
      a.navbar-brand(href='/') Home 
     
    nav.collapse.navbar-collapse(role='navigation')
      ul.nav.navbar-nav
        if menus
          each item in menus
            li
              a(href='#{item.link}') #{item.title}
             
      ul.nav.navbar-right.navbar-nav
        li.dropdown(ng-class="{true:'open',false:''}[showSearch]")
          a.dropdown-toggle(href='', data-toggle='dropdown' , ng-click="toggle('showSearch')")
            i.glyphicon.glyphicon-search
                |           
          ul.dropdown-menu(style='padding:12px;')
            form.form-inline
              button.btn.btn-default.pull-right(type='submit')
                i.glyphicon.glyphicon-search
              input.form-control.pull-left(type='text', placeholder='Search')